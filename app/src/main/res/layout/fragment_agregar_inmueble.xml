<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#343A40"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".ui.inmuebles.InmuebleDetalleFragment">


    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="NUEVO INMUEBLE"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textColorHint="#343A40">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etDireInmueble"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:enabled="true"
            android:hint="DirecciÃ³n"
            android:inputType="textPersonName"
            android:textColor="#343A40"
            android:textColorLink="#673AB7"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textColorHint="#343A40">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etAmbiestesInmueble"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:enabled="true"
            android:hint="Ambientes"
            android:inputType="textPersonName"
            android:textColor="#343A40"
            android:textColorLink="#673AB7"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textColorHint="#343A40">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPrecioInmueble"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:enabled="true"
            android:hint="Precio"
            android:inputType="textPersonName"
            android:textColor="#343A40"
            android:textColorLink="#673AB7"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textColorHint="#343A40">

        <Spinner
            android:id="@+id/spTipo"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="#FFFFFF"
            android:ems="20"
            android:enabled="true"
            android:entries="@array/Tipos"
            android:inputType="textPersonName"
            android:spinnerMode="dropdown"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textColorHint="#343A40">

        <Spinner
            android:id="@+id/spUso"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="#FFFFFF"
            android:ems="10"
            android:enabled="true"
            android:entries="@array/Usos"
            android:textColor="#343A40"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>


    <ImageView
        android:id="@+id/ivInmuebleNuevo"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="15dp"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btCargarFoto"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:text="Abrir Galeria"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btAgregar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:text="Guardar"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />


</LinearLayout>